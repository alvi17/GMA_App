<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEC"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FEC"
    android:padding="16dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chakra Balancing"
        android:id="@+id/textView2"
        android:textColor="#A001"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/balancechakras"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Which Chakras to Balance"
        android:id="@+id/choose_chakrabutton"
        android:textAllCaps="false"
        android:padding="5dp"
        android:layout_margin="16dp"
        android:textColor="#E001"
        android:background="@drawable/button_back"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textColor="#E001"
        android:textAllCaps="false"
        android:paddingRight="5dp"
        android:drawableLeft="@drawable/left_arrow"
        android:background="@drawable/button_back"
        android:id="@+id/chakra_balance_main_button3" />

</LinearLayout>
</ScrollView>