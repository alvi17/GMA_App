<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E699"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#8CBF4D">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:id="@+id/main_menubutton8"
                    android:layout_marginBottom="10dp"
                    android:textColor="#650205"
                    android:layout_margin="5dp"
                    android:background="#8CBF4D"
                    android:layout_gravity="left|center"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Chakra Information"
                        android:textColor="#F2E60D"
                        android:id="@+id/textView9"
                        android:layout_gravity="center_horizontal|top"
                        />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#739940"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ck1_first"
                        android:layout_weight=".99"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Soul Star Chakra"
                                android:id="@+id/textView10"
                                android:gravity="top|center"
                                android:textColor="#F2E60D"
                                android:layout_marginTop="10dp"
                                />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/imageView7"
                                android:src="@drawable/chakraflower8"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="70dp"
                                android:layout_marginBottom="10dp"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginTop="0dp"
                        android:id="@+id/ck1_second"
                        android:layout_weight="5">
                        <ImageView
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView_ck8"
                            android:src="@drawable/chakra_crystal8"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ck1_text"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chakra_8"
                    android:padding="5dp"
                    android:textColor="#001"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:background="#14594D"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:textAllCaps="false"

                    android:id="@+id/back_button8"
                    android:layout_marginBottom="10dp"
                    android:textColor="#4DBFA6"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_back"
                    android:layout_gravity="left|center"

                    android:layout_weight=".01"
                    />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/ck8_seekbar"
                    android:layout_weight=".7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:minHeight="10dip"
                    android:maxHeight="10dip"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:id="@+id/nextbutton8"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="#4DBFA6"
                    android:background="@drawable/button_back"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".01"
                    android:layout_gravity="right|center"

                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

